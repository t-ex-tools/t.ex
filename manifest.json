{
  "manifest_version": 3,
  "name": "T.EX - The Transparency EXtension",
  "description": "Visualize and record third-party communication with T.EX - The Transparency Extension to identify Web trackers and what they know about you.",
  "version": "2.0",
  "icons": {
    "32": "./src/assets/icons/icon32.png",
    "48": "./src/assets/icons/icon48.png",
    "64": "./src/assets/icons/icon64.png",
    "96": "./src/assets/icons/icon96.png",
    "128": "./src/assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "./src/background/Background.js",
    "type": "module"
  },
  "content_scripts": [{
    "js": [
      "./src/content_scripts/inject.js"
    ],
    "run_at": "document_start",
    "matches": [ "<all_urls>" ],
    "all_frames": true
  }],
  "action": {
    "default_icon": "./src/assets/icons/icon16.png",
    "default_title": "T.EX - Transparency EXtension",
    "default_popup": "./src/popup/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/content_scripts/index.js",
        "src/content_scripts/interfaces.js"
      ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "permissions": [
    "background",
    "webRequest",
    "storage",
    "activeTab",
    "tabs",
    "downloads",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
