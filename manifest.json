{
  "manifest_version": 2,
  "name": "T.EX - The Transparency EXtension",
  "description": "Visualize and record third-party communication with T.EX - The Transparency Extension to identify Web trackers and what they know about you.",
  "version": "2.0",
  "icons": {
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "64": "./icons/icon64.png",
    "96": "./icons/icon96.png",
    "128": "./icons/icon128.png"
  },
  "background": {
    "scripts": [
      "./app/libraries/lz-string/lz-string.min.js",
      "./app/libraries/sjcl/sjcl.js",
      "./app/libraries/jsencrypt/jsencrypt.min.js",
      "./background/Requests.js",
      "./background/Tabs.js",
      "./background/Background.js"
    ]
  },
  "content_scripts": [{
    "js": [
      "./content_scripts/inject.js"
    ],
    "run_at": "document_start",
    "matches": ["<all_urls>"],
    "all_frames": true
  }],
  "browser_action": {
    "default_icon": "./icons/icon16.png",
    "default_title": "T.EX - Transparency EXtension",
    "default_popup": "./popup/index.html"
  },
  "web_accessible_resources": [
    "content_scripts/index.js",
    "content_scripts/interfaces.js",
    "app/resources/DdgRadarRules.json",
    "app/resources/MySimpleKeyWordRules.txt"
  ],
  "permissions": [
    "background",
    "webRequest",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "tabs",
    "downloads",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com; object-src 'self'"
}
